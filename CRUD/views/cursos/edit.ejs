<div class="card shadow-sm">
  <div class="card-body">
    <h1 class="h4 mb-3">Editar Curso</h1>
    <form action="/cursos/edit/<%= id %>" method="POST">
      <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" name="nome" id="nome" class="form-control" value="<%= curso.nome %>" required>
      </div>

      <div class="form-group mt-2">
        <label for="cargaHoraria">Carga Horária (h)</label>
        <input type="number" name="cargaHoraria" id="cargaHoraria" class="form-control" value="<%= curso.cargaHoraria %>" required>
      </div>

      <button type="submit" class="btn btn-primary mt-3">Salvar Alterações</button>
      <a href="/cursos" class="btn btn-secondary mt-3">Cancelar</a>
    </form>
  </div>
</div>
