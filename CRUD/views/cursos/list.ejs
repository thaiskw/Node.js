<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">Cursos</h1>
  <a href="/cursos/create" class="btn btn-primary">Novo Curso</a>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <table class="table table-hover align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th>Nome</th>
          <th>Carga Horária</th>
          <th class="text-end">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% if (cursos.length === 0) { %>
          <tr>
            <td colspan="3" class="text-center text-muted">Nenhum curso cadastrado.</td>
          </tr>
        <% } else { %>
          <% cursos.forEach(c => { %>
            <tr>
              <td><%= c.nome %></td>
              <td><%= c.cargaHoraria %></td>
              <td class="text-end">
                <a href="/cursos/edit/<%= c.id %>" class="btn btn-sm btn-outline-secondary">Editar</a>
                <form action="/cursos/delete/<%= c.id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Excluir este curso?')">Excluir</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
