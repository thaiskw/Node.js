<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">Alunos</h1>
  <a href="/alunos/create" class="btn btn-primary">Novo Aluno</a>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <table class="table table-hover align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th>Nome</th>
          <th>Matrícula</th>
          <th class="text-end">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% if (alunos.length === 0) { %>
          <tr>
            <td colspan="3" class="text-center text-muted">Nenhum aluno cadastrado.</td>
          </tr>
        <% } else { %>
          <% alunos.forEach(a => { %>
            <tr>
              <td><%= a.nome %></td>
              <td><%= a.matricula %></td>
              <td class="text-end">
                <a href="/alunos/edit/<%= a.id %>" class="btn btn-sm btn-outline-secondary">Editar</a>
                <form action="/alunos/delete/<%= a.id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Excluir este aluno?')">Excluir</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
