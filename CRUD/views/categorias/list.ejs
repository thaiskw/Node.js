<!-- Cabeçalho da página: título à esquerda + botão "Nova Categoria" à direita -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">Categorias</h1>
  <!-- Link para o formulário de criação -->
  <a href="/categorias/create" class="btn btn-primary">Nova Categoria</a>
</div>

<!-- Card Bootstrap para dar um visual "caixa" -->
<div class="card shadow-sm">
  <div class="card-body p-0">
    <!-- Tabela responsiva para exibir as categorias -->
    <table class="table table-hover align-middle mb-0">
      <!-- Cabeçalho da tabela -->
      <thead class="table-light">
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th class="text-end">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% if (Object.keys(categorias).length===0) { %>
          <tr>
            <td colspan="2" class="text-center text-muted py-4">
              Nenhum registro encontrado.
            </td>
          </tr>
          <% } %>

            <% for (let id in categorias) { %>
              <tr>
                <td>
                  <%= categorias[id].nome %>
                </td>
                <td>
                  <%= categorias[id].descricao %>
                </td>
                <td class="text-end">
                  <!--link do excluir e do editar-->
                  <!-- Link para editar (passa o id na URL) -->
                  <a class="btn btn-sm btn-outline-warning" href="/categorias<%= id %>/edit">
                    Editar
                  </a>
                  <!-- Link para excluir (passa o id na URL) -->
                  <a class="btn btn-sm btn-outline-danger" href="/categorias/<%= id %>/delete"
                    onclick="return confirm('Excluir esta categoria?')">
                    Excluir
                  </a>
                </td>
              </tr>
              <% } %>
      </tbody>
    </table>
  </div>
</div>